---
export interface Props {
  title: string;
  icon: string;
}

const { title, icon } = Astro.props as Props;
---

<div class="flex align-middle justify-start py-4 grayscale hover:grayscale-0">
  <img src={`https://cdn.simpleicons.org/${icon}`} alt="" class="w-5" />
  <p class="text-gray-400 px-2">{title}</p>
</div>

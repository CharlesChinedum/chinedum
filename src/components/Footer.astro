---
import { socials } from "../data";
import FooterIcon from "./FooterIcon.astro";

const date = new Date();
const year = date.getFullYear();
---

<footer class="w-full flex justify-center" id="contact">
  <div
    class="max-w-[760px] flex flex-col md:flex-row justify-between w-full text-center border-t-[1px] border-gray-700 py-4 px-7 text-gray-500 text-sm"
  >
    <div>
      <p>&copy; {year} Chinedum.</p>
    </div>
    <div class="flex justify-center gap-7 md:gap-3 my-3 md:my-0">
      {
        socials.map((item) => (
          <FooterIcon url={item.url} icon={item.icon} title={item.title} />
        ))
      }
    </div>
  </div>
</footer>

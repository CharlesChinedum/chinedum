---
export interface Props {
  title: string;
  desc: string;
  img: string;
  url: string;
  src: string;
}

const { title, desc, img, url, src } = Astro.props as Props;
---

<div class="md:w-[17rem] my-3 h-[25rem]">
  <div
    class="h-full flex flex-col justify-between border border-gray-600 hover:border-brand-100 transition duration-300 ease-in-out rounded-xl p-5"
  >
    <div class="flex flex-col gap-x-3">
      <div class="h-32 w-32">
        <img
          src={img}
          alt=""
          class="h-full w-full object-cover hover:scale-105 transform transition duration-300 ease-in-out rounded-xl"
        />
      </div>
      <div>
        <h2 class="text-gray-200 text-xl lg:text-lg pt-3 font-[500]">
          {title}
        </h2>
      </div>
    </div>
    <div class="h-1/2 flex flex-col justify-between">
      <p class="text-gray-500 text-lg md:text-base py-5">{desc}</p>
      <div class="w-full flex justify-between">
        {
          src != undefined ? (
            <a href={src} target="_blank">
              <div class="bg-gray-800 px-3 rounded-md hover:cursor-pointer">
                <p class="text-gray-400">src</p>
              </div>
            </a>
          ) : null
        }
        <a href={url} target="_blank">
          <p class="text-gray-200 hover:cursor-pointer">Visit website</p>
        </a>
      </div>
    </div>
  </div>
</div>

---
export interface Props {
  title: string;
  desc: string;
  img: string;
}

const { title, desc, img } = Astro.props as Props;
---

<div class="w-[17rem] my-3">
  <div>
    <div class="rounded-lg w-full">
      <img
        src={img}
        alt=""
        class="h-[13em] w-full hover:object-cover hover:scale-105 transform transition duration-300 ease-in-out"
      />
    </div>
    <h2 class="text-gray-200 text-2xl pt-3 font-[500]">{title}</h2>
    <p class="text-gray-500 py-5">{desc}</p>
    <div class="w-full flex justify-between">
      <div class="bg-gray-800 px-3 rounded-md hover:cursor-pointer">
        <p class="text-gray-400">src</p>
      </div>
      <p class="text-gray-200 hover:cursor-pointer">Visit website</p>
    </div>
  </div>
</div>

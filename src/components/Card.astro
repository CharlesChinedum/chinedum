---
export interface Props {
  title: string;
  desc: string;
  img: string;
  url: string;
  src: string;
  stack: string[];
}

const { title, desc, img, url, src, stack } = Astro.props as Props;
---

<div class="w-full md:w-[17rem] my-3 h-[28rem]">
  <div
    class="h-full flex flex-col justify-between group border border-gray-600 hover:border-brand-100 transition duration-300 ease-in-out rounded-xl p-5"
  >
    <div class="flex flex-col gap-x-3">
      <div class="h-32 w-32">
        <img
          src={img}
          alt=""
          class="h-full w-full object-cover hover:scale-105 transform transition duration-300 ease-in-out rounded-xl"
        />
      </div>
      <div>
        <h2 class="text-gray-200 text-xl lg:text-lg pt-3 font-[500]">
          {title}
        </h2>
      </div>
    </div>
    <div class="h-1/2 flex flex-col justify-between">
      <div class="h-2/3">
        <p class="text-gray-500 text-lg md:text-base pb-5">{desc}</p>
      </div>
      <div class="flex items-start gap-x-3 gap-y-1 flex-wrap h-1/5 mb-2">
        {
          stack?.map((item) => (
            <div class="flex items-center gap-x-1">
              <div class="w-2 h-2 bg-gray-700 rounded-full group-hover:bg-brand-100  transition-all duration-300 ease-in-out" />
              <p class="text-gray-500 text-sm lg:text-xs font-medium">{item}</p>
            </div>
          ))
        }
      </div>
      <div class="w-full flex justify-between">
        {
          src != undefined ? (
            <a href={src} target="_blank">
              <div class="bg-gray-800 px-3 rounded-md hover:cursor-pointer">
                <p class="text-gray-400">src</p>
              </div>
            </a>
          ) : null
        }
        <a href={url} target="_blank">
          <p class="text-gray-200 hover:cursor-pointer">Visit website</p>
        </a>
      </div>
    </div>
  </div>
</div>

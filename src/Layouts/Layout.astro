---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.jsx";

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon4.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Chinedum is a Fullstack Software Engineer with experience in building professional, scalable software."
    />
    <meta
      property="og:image"
      content="https://www.trulynedum.dev/favicon4.png"
    />
    <meta property="og:url" content="https://www.trulynedum.dev" />
    <meta property="og:type" content="website" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content="Chinedum is a Fullstack Software Engineer with experience in building professional, scalable software."
    />
    <meta
      name="twitter:image"
      content="https://www.trulynedum.dev/favicon4.png"
    />

    <title>{title}</title>
  </head>
  <body>
    <!-- <Navbar client:load /> -->
    <slot />
    <Footer />

    <!-- 100% privacy-first analytics -->
    <script async src="https://scripts.simpleanalyticscdn.com/latest.js"
    ></script>
  </body>
</html>

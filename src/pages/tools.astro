---
import Layout from "../Layouts/Layout.astro";
import "../styles/blog.module.css";

import BlogNavbar from "../components/BlogNavbar.astro";
import PageLayout from "../components/Layouts/PageLayout.astro";

const posts = await Astro.glob("../posts/*.md");
---

<Layout title="Tools">
  <PageLayout>
    <section>
      <BlogNavbar />
      <div class="flex justify-center items-start my-20 md:h-[55vh]">
        <div class="container text-gray-400 px-5 pb-7">
          <div class="mb-7">
            <h2 class="text-gray-200 text-2xl md:text-3xl font-[600]">Tools</h2>
            <p class="text-gray-400 my-2 text-lg">
              A portal into my thoughts, experiences, ideas, visions, interests,
              and more. What's the point of this? Well, I'm not sure, but here
              you go anyway.
            </p>
          </div>
        </div>
      </div>
    </section>
  </PageLayout>
</Layout>
